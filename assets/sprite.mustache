{'functions': true}

/**
 * SPRITES
 * DON'T EDIT THIS FILE, IT'S GENERATED BY GULP FROM images/
 * ALL IMAGES IN images/ DIR MUST BE RETINA
 */

{{#options.functions}}
.sprite {
    background: url("{{{spritesheet.image}}}") top left no-repeat;
    display: inline-block;
    vertical-align: middle;
    background-size: floor({{spritesheet.px.width}}/2) floor({{spritesheet.px.height}}/2);
}
{{/options.functions}}

{{#items}}
.sprite-{{name}} {
    background-position: floor({{px.offset_x}}/2) floor({{px.offset_y}}/2);
    width: floor({{px.width}}/2);
    height: floor({{px.height}}/2);
}
{{/items}}
